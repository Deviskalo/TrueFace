# Production Environment Configuration for TrueFace
# Copy this file to .env.prod and fill in your actual values

# ===========================================
# SECURITY SETTINGS (CHANGE THESE!)
# ===========================================
JWT_SECRET=your_super_secure_jwt_secret_here_min_32_chars
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=your_secure_mongodb_password_here
REDIS_PASSWORD=your_secure_redis_password_here
GRAFANA_PASSWORD=your_secure_grafana_password_here

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
MONGO_URI=mongodb://admin:your_secure_mongodb_password_here@mongo:27017/trueface_prod?authSource=admin
MONGO_DB_NAME=trueface_prod

# ===========================================
# APPLICATION SETTINGS
# ===========================================
# Session expiration (in minutes)
SESSION_EXPIRES_MINUTES=60

# Development mode (set to false in production)
DEV_MODE_NO_DB=false
TEST_MODE=false

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# CORS origins (comma-separated list)
CORS_ORIGINS=https://trueface.local,https://api.trueface.local

# Rate limiting settings
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_AUTH=10/minute
RATE_LIMIT_UPLOAD=5/minute

# Security headers
SECURITY_HEADERS_ENABLED=true
CONTENT_SECURITY_POLICY=default-src 'self'; img-src 'self' data: blob:; style-src 'self' 'unsafe-inline'; script-src 'self'

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
NEXT_PUBLIC_API_URL=https://api.trueface.local
NODE_ENV=production

# ===========================================
# SSL/TLS CONFIGURATION
# ===========================================
# SSL certificate paths (relative to nginx/ssl directory)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# ===========================================
# MONITORING & LOGGING
# ===========================================
# Prometheus settings
PROMETHEUS_RETENTION_TIME=15d

# Log levels (debug, info, warning, error, critical)
LOG_LEVEL=info

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
# Database backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# ===========================================
# EMAIL NOTIFICATIONS (Optional)
# ===========================================
SMTP_HOST=smtp.your-domain.com
SMTP_PORT=587
SMTP_USER=notifications@your-domain.com
SMTP_PASSWORD=your_smtp_password
FROM_EMAIL=noreply@your-domain.com
ADMIN_EMAIL=admin@your-domain.com

# ===========================================
# PERFORMANCE SETTINGS
# ===========================================
# Backend worker processes
WORKERS=4

# Memory limits (for Docker containers)
BACKEND_MEMORY_LIMIT=512m
FRONTEND_MEMORY_LIMIT=256m
MONGO_MEMORY_LIMIT=1g
REDIS_MEMORY_LIMIT=128m

# ===========================================
# DOMAIN CONFIGURATION
# ===========================================
DOMAIN_NAME=trueface.local
API_DOMAIN=api.trueface.local
